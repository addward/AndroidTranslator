<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/initial_text_fragment"
        android:name="translator.addward.com.yandextranslator.TranslatorFragment"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_margin="8sp"
        android:layout_marginRight="0sp"
        android:layout_weight="3"
        />

    <fragment
        android:id="@+id/buttons_fragment"
        android:name="translator.addward.com.yandextranslator.ButtonsFragment"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />
    <fragment
        android:id="@+id/final_text_fragment"
        android:layout_margin="8dp"
        android:layout_marginRight="0dp"
        android:name="translator.addward.com.yandextranslator.ResultFragment"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="6" />
</LinearLayout>
