<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    grid:columnCount="1"
    grid:orientation="vertical"
    grid:rowCount="4">

    <fragment
        android:id="@+id/initial_text_fragment"
        android:name="translator.addward.com.yandextranslator.TranslatorFragment"
        android:layout_width="0sp"
        android:layout_height="0sp"
        grid:layout_column="0"
        android:layout_margin="8sp"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill"
        grid:layout_row="0"
        grid:layout_rowWeight="3" />

    <fragment
        android:id="@+id/buttons_fragment"
        android:name="translator.addward.com.yandextranslator.ButtonsFragment"
        android:layout_width="0sp"
        android:layout_height="0sp"
        grid:layout_column="0"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill"
        grid:layout_row="1"
        grid:layout_rowWeight="1" />

    <fragment
        android:id="@+id/final_text_fragment"
        android:layout_margin="8sp"
        android:name="translator.addward.com.yandextranslator.ResultFragment"
        android:layout_width="0sp"
        android:layout_height="0sp"
        grid:layout_column="0"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill"
        grid:layout_row="2"
        grid:layout_rowWeight="3" />

</android.support.v7.widget.GridLayout>
