<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <fragment
            android:id="@+id/buttons_fragment"
            android:name="translator.addward.com.yandextranslator.ButtonsFragment"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginTop="8dp" />

        <fragment
            android:id="@+id/initial_text_fragment"
            android:name="translator.addward.com.yandextranslator.TranslatorFragment"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="5"
            android:layout_margin="8sp"
            android:layout_marginRight="0sp"
            />
    </LinearLayout>

    <fragment
        android:id="@+id/final_text_fragment"
        android:name="translator.addward.com.yandextranslator.ResultFragment"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>